# Database Configuration
DATABASE_URL=sqlite:///./qa_service.db
# DATABASE_URL=postgresql://qa_user:qa_password@localhost:5432/qa_db

# Authentication Settings
SECRET_KEY=your-super-secret-key-change-this-in-production-make-it-very-long-and-random
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration (optional)
OPENAI_API_KEY=

# Ollama Configuration
OLLAMA_ENABLED=true
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=qwen3:1.7b
OLLAMA_TIMEOUT=60

# Vector Database Configuration
VECTOR_DB_TYPE=qdrant  # Options: chromadb, elasticsearch, qdrant

# ChromaDB Configuration
CHROMA_PERSIST_DIRECTORY=./chroma_db

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX=qa_documents

# Qdrant Configuration
# For local mode, leave QDRANT_URL empty (uses local storage)
QDRANT_URL= 
# For server mode, use something like: http://localhost:6333
# For Qdrant Cloud, use: https://your-cluster-url.qdrant.tech
QDRANT_API_KEY=
QDRANT_PERSIST_DIRECTORY=./qdrant_db
QDRANT_COLLECTION_NAME=qa_documents
QDRANT_TIMEOUT=60

# Embedding Model (shared across all vector stores)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2 
#EMBEDDING_MODEL=sentence-transformers/all-mpnet-base-v2  
#EMBEDDING_MODEL=Qwen/Qwen3-Embedding-0.6B  

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=[".txt", ".pdf"]

# Multi-user Limits
MAX_DOCUMENTS_PER_USER=100
MAX_CHUNKS_PER_DOCUMENT=1000
MAX_QUERIES_PER_HOUR=100

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=false  # Set to true for testing without Celery worker

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_DB=1  # Different DB for caching (broker uses DB 0)
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=50

# RabbitMQ Configuration (alternative to Redis broker)
RABBITMQ_URL=amqp://guest:guest@localhost:5672//
USE_RABBITMQ=false  # Set to true to use RabbitMQ instead of Redis as broker

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Task Timeouts (in seconds)
DOCUMENT_PROCESSING_TIMEOUT=600  # 10 minutes
QA_TASK_TIMEOUT=180  # 3 minutes
USER_TASK_TIMEOUT=60  # 1 minute

# Queue Priorities
HIGH_PRIORITY_QUEUE=high_priority
NORMAL_PRIORITY_QUEUE=normal
LOW_PRIORITY_QUEUE=low_priority

# Logging
LOG_LEVEL=INFO

# Production Database (optional)
POSTGRES_DB=qa_db
POSTGRES_USER=qa_user
POSTGRES_PASSWORD=qa_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432